{
  "id": "quiz-show",
  "name": "Quiz Show",
  "version": "1.0.0",
  "description": "Interactive quiz show plugin in the style of 'Who Wants to Be a Millionaire' for TikTok livestreams with chat integration, jokers, and leaderboard",
  "author": "TikTok Helper",
  "entry": "main.js",
  "enabled": true,
  "type": "module",
  "permissions": [
    "socket.io",
    "routes",
    "tiktok-events",
    "database",
    "file-upload"
  ],
  "features": [
    "Question database management (upload & manual creation)",
    "Interactive quiz rounds with countdown timer",
    "TikTok chat integration for answers",
    "Superfan jokers (50:50, Info, Time Boost)",
    "Persistent leaderboard with points",
    "Configurable game settings",
    "High-end overlay with animations",
    "Import/Export questions and leaderboard"
  ],
  "config": {
    "roundDuration": 30,
    "pointsFirstCorrect": 100,
    "pointsOtherCorrect": 50,
    "showAnswersAfterTime": true,
    "multipleWinners": true,
    "shuffleAnswers": false,
    "randomQuestions": true,
    "joker50Enabled": true,
    "jokerInfoEnabled": true,
    "jokerTimeEnabled": true,
    "jokerTimeBoost": 15,
    "jokersPerRound": 3
  }
}
