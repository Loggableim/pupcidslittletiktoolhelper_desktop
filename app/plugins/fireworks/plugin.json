{
  "id": "fireworks",
  "name": "Fireworks Superplugin",
  "version": "1.0.0",
  "description": "GPU-accelerated fireworks effects with gift-specific displays, combo systems, and interactive triggers. Features WebGL/WebGPU rendering with Canvas fallback.",
  "author": "Pup Cid",
  "entry": "main.js",
  "enabled": false,
  "permissions": [
    "socket.io",
    "routes",
    "tiktok-events",
    "database",
    "file-upload"
  ],
  "dependencies": [],
  "features": [
    "gift-triggered-fireworks",
    "combo-streak-system",
    "escalation-system",
    "gpu-particle-engine",
    "custom-shapes",
    "audio-effects",
    "goal-finales",
    "interactive-triggers",
    "random-generator",
    "api-hooks"
  ]
}
